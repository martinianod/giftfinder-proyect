# ============================================
# GIFTFINDER - Environment Variables
# ============================================

# Scraper Service
SCRAPER_PORT=8001
OLLAMA_HOST=http://ollama:11434

# Provider Configuration
ENABLED_PROVIDERS=reference,scraping
MAX_CONCURRENT_PROVIDERS=3
PROVIDER_TIMEOUT_SECONDS=15

# Performance & Limits
MAX_CONCURRENT_SCRAPES=3
LLM_TIMEOUT_SECONDS=15
SCRAPING_TIMEOUT_SECONDS=10
CACHE_TTL_SECONDS=3600
MAX_QUERY_LENGTH=500

# Rate Limiting
RATE_LIMIT_PER_MINUTE=30

# Backend Service
BACKEND_PORT=8080
SCRAPER_BASE_URL=http://scraper:8001

# Database
POSTGRES_DB=giftfinder
POSTGRES_USER=giftfinder_user
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
POSTGRES_PORT=5432

# Spring Boot
SPRING_PROFILES_ACTIVE=default

# Ollama
OLLAMA_MODEL=qwen2.5:1.5b

# Logging
LOG_LEVEL=INFO

# Security
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend
VITE_API_URL=http://localhost:8080
VITE_DEMO_MODE=false

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
# For Gmail: Use App Password, not regular password
# For other providers: Use appropriate SMTP settings

# Application URLs
APP_BASE_URL=http://localhost:5173

# Scheduler Configuration (Cron expressions)
REMINDER_JOB_CRON=0 0 6 * * *
PRICE_CHECK_JOB_CRON=0 0 */12 * * *
